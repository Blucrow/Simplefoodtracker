<BlazorBarcodeScanner.ZXing.JS.BarcodeReader StartCameraAutomatically="true"
VideoWidth="600"
VideoHeight="300"
OnBarcodeReceived="@OnScan"
ShowReset="false"
ShowVideoDeviceList="false"
ShowToggleTorch="false"
ShowResult="false"
ShowStart="false"
ShowStop="false"
LabelVideoDeviceListText=""
@ref="@_scanner"
Title=""/>

@code {
	[Parameter]
	public EventCallback<string> OnScanned { get; set; }

	private BarcodeReader _scanner = null!;

	private async Task OnScan(BarcodeReceivedEventArgs args)
	{
		await OnScanned.InvokeAsync(args.BarcodeText);
		_scanner.BarcodeText = "";
	}
}
