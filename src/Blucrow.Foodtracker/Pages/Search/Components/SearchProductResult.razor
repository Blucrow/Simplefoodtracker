<MudCard Class="border-solid border-2 mud-border-primary pa-4">
	<MudCardHeader>
		<CardHeaderContent>
			<MudText Typo="Typo.h6">@Product.Name</MudText>
			<MudText Typo="Typo.subtitle1">@Product.Brand</MudText>
		</CardHeaderContent>
	</MudCardHeader>
	<MudCardContent>
		<MudDataGrid Filterable="false" SortMode="SortMode.None" Items="@Product.GetNutrionsAsData()">
			<Columns>
				<PropertyColumn Property="x => x.NutritionType" Title="Nutrition"/>
				<PropertyColumn Property="x => x.Per100g" Title="Amount per 100g"/>
			</Columns>
		</MudDataGrid>
	</MudCardContent>
	<div class="d-flex justify-center">
		<MudCardActions>
			
		</MudCardActions>
	</div>
</MudCard>

@code {
	[Parameter]
	public Product Product { get; set; } = null!;


}
